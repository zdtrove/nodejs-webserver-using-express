extends ../layouts/common

block content
    .container
        h1 Create user
        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="/users/create", method="POST", enctype="multipart/form-data")
            .form-group
                label(for="name") Name
                input(name="name", type="text", class="form-control", value=values ? values.name : '')
            .form-group
                label(for="phone") Phone
                input(name="phone", type="text", class="form-control", value=values ? values.phone : '')
            .form-group
                labe(for="avatar") Image
                input#avatar(name="avatar", type="file", class="form-control")
            button.btn.btn-primary Create